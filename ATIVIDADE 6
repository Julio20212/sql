create database bd_teste_1e;



create table tbusuarios(
iduser integer,
usuario varchar(50),
login varchar(20),
senha varchar(20),
perfil varchar(20),
PRIMARY KEY (iduser)
);



describe tbusuarios;



create table pessoa(
id integer,
bi varchar(45),
nome varchar(45),
data_nasc date,
telefone varchar(45),
email varchar(45),
morada varchar(45),
primary KEY (id)
);



describe pessoa;



create table tbfuncionarios(
Idfunc integer,
Nome varchar(50),
Registro integer,
Guerra varchar(30),
Gerencia varchar(20),
Det varchar(20),
Turno varchar(10),
Cargo varchar(30),
Atividade varchar(50),
Funcao varchar(30),
Vinculo varchar(30),
Situacao varchar(30),
PRIMARY KEY (registro)
);



describe tbfuncionarios;
