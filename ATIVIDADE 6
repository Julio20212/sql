create database bd_teste_1e;



create table tbusuarios(
iduser integer,
usuario varchar(50),
login varchar(20),
senha varchar(20),
perfil varchar(20),
PRIMARY KEY (iduser)
);



describe tbusuarios;



create table pessoa(
id integer,
bi varchar(45),
nome varchar(45),
data_nasc date,
telefone varchar(45),
email varchar(45),
morada varchar(45),
primary KEY (id)
);



describe pessoa;



create table tbfuncionarios(
idfunc integer,
nome varchar(50),
registro integer,
guerra varchar(30),
gerencia varchar(20),
det varchar(20),
turno varchar(10),
cargo varchar(30),
atividade varchar(50),
funcao varchar(30),
vinculo varchar(30),
situacao varchar(30),
PRIMARY KEY (registro)
);



describe tbfuncionarios;
